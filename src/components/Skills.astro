<section class="my-4 mb-24">
  <div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
    <h2 class="text-3xl font-bold text-center mb-16 text-gray-900 dark:text-white">
      Tech Stack
      <div class="mt-2 flex justify-center items-center gap-3">
        <span class="w-6 h-[1px] bg-blue-500"></span>
        <span class="text-lg font-medium text-blue-600 dark:text-blue-400">What I Work With</span>
        <span class="w-6 h-[1px] bg-blue-500"></span>
      </div>
    </h2>
    
    <div class="space-y-12">
      {/* AI & ML */}
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white flex items-center gap-2">
          <span class="w-8 h-[2px] bg-gradient-to-r from-blue-500 to-purple-500"></span>
          AI & ML
        </h3>
        <div class="flex flex-wrap gap-3">
          {["LLM", "RAG", "Prompt Engineering", "AI Agents"].map((skill) => (
            <span class="px-4 py-2 bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 
              rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 
              dark:hover:border-blue-400 transition-all duration-300 text-sm"
            >
              {skill}
            </span>
          ))}
        </div>
      </div>

      {/* Languages */}
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white flex items-center gap-2">
          <span class="w-8 h-[2px] bg-gradient-to-r from-blue-500 to-purple-500"></span>
          Languages
        </h3>
        <div class="flex flex-wrap gap-3">
          {[".NET", "PHP", "Python", "Go", "JavaScript", "HTML & CSS"].map((skill) => (
            <span class="px-4 py-2 bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 
              rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 
              dark:hover:border-blue-400 transition-all duration-300 text-sm"
            >
              {skill}
            </span>
          ))}
        </div>
      </div>

      {/* Database */}
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white flex items-center gap-2">
          <span class="w-8 h-[2px] bg-gradient-to-r from-blue-500 to-purple-500"></span>
          Database
        </h3>
        <div class="flex flex-wrap gap-3">
          {["MySQL", "MSSQL", "MongoDB", "Airtable"].map((skill) => (
            <span class="px-4 py-2 bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 
              rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 
              dark:hover:border-blue-400 transition-all duration-300 text-sm"
            >
              {skill}
            </span>
          ))}
        </div>
      </div>

      {/* DevOps & Tools */}
      <div class="space-y-4">
        <h3 class="text-xl font-semibold text-gray-800 dark:text-white flex items-center gap-2">
          <span class="w-8 h-[2px] bg-gradient-to-r from-blue-500 to-purple-500"></span>
          DevOps & Tools
        </h3>
        <div class="flex flex-wrap gap-3">
          {["Jenkins", "Kubernetes", "Git", "AWS ECS", "Docker", "Figma"].map((skill) => (
            <span class="px-4 py-2 bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 
              rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 
              dark:hover:border-blue-400 transition-all duration-300 text-sm"
            >
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>